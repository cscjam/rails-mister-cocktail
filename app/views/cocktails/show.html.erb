<div class="container">

  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <%= cl_image_tag @cocktail.photo.key, height: 400, width: 300, crop: :fill %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="list-group">

        <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
            <td>
              <%= link_to "(Delete)", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>

      </div>
      <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: 'btn btn-flat' %>
    </div>
  </div>

  <br>
  <%= link_to 'Back', cocktails_path %>
</div>

