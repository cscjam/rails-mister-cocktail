<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="list-group">
        <h2>Ingredients</h2>
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item">
            <p><%= dose.ingredient.name %>><%= dose.description %></p>
            <%= link_to "Delete", cocktail_dose_path(dose) method: :delete %>
          </li>
        <% end %>
      </div>
      <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
  <br>
  <%= link_to 'Back', cocktails_path %>
</div>

