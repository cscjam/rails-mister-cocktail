<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add an ingredient</h1>
        <%= simple_form_for [ @cocktail, @dose ] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <%= f.button :submit %>
        <% end %>
    </div>
  </div>
</div>
